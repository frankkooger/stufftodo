    $GLOBALS['stam']->Do_query("UPDATE {$GLOBALS['stam']->dagboeken} "
                       ." SET \"boeknummer\"={$arr['vorigeboeknummer']}"
                       .",\"saldo\"='{$arr['saldo']}'"
