          break;

        default        :
          break;

      } // END switch

    }
    //
    // Nieuwe boekregel
    //
    else          { 
      $val = $this->emptyBoekregel();
      $head = "Nieuwe boekregel";
      $help = array('','Journaal..nieuweBoekregel','Nieuwe boekregel');
      $isnieuwtag = '1';
